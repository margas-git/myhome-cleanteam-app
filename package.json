{
  "name": "myhome-cleanteam",
  "version": "1.0.0",
  "description": "MyHome CleanTeam - Single service for Railway",
  "main": "dist/server/index.js",
  "type": "module",
  "scripts": {
    "dev": "npm run server:dev",
    "server:dev": "tsx watch server/index.ts",
    "client:dev": "vite client",
    "build": "npm run build:client && npm run build:server",
    "build:client": "vite build client",
    "build:server": "tsc --project tsconfig.build.json",
    "postbuild": "echo 'Build verification:' && ls -la client/dist/ && echo 'CSS files:' && ls -la client/dist/assets/*.css 2>/dev/null || echo 'No CSS files found'",
    "start": "node dist/server/index.js",
    "db:push": "drizzle-kit push:pg --driver=pg --schema=./server/db/schema.ts --connectionString=$DATABASE_URL",
    "db:generate": "drizzle-kit generate:pg",
    "db:setup": "npm run db:generate && npm run db:push && npm run seed",
    "seed": "tsx server/seed.ts"
  },
  "dependencies": {
    "@radix-ui/react-select": "^2.2.5",
    "@tanstack/react-query": "^5.29.0",
    "axios": "^1.6.3",
    "bcryptjs": "^2.4.3",
    "clsx": "^2.1.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "csv-parse": "^5.6.0",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "dotenv": "^16.6.1",
    "drizzle-orm": "^0.29.4",
    "express": "^4.19.2",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.525.0",
    "postgres": "^3.4.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.18.0",
    "tailwind-merge": "^3.3.1",
    "wouter": "^2.12.1",
    "zod": "^3.23.0",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.19.4",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.0.0",
    "autoprefixer": "^10.4.14",
    "drizzle-kit": "^0.20.5",
    "postcss": "^8.4.24",
    "tailwindcss": "^3.3.2",
    "tsx": "^4.7.0",
    "typescript": "^5.8.3",
    "vite": "^4.5.14"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
